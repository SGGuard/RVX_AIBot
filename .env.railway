# ===== RAILWAY DEPLOYMENT CONFIGURATION =====
# Copy these values to Railway dashboard environment variables

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="your-telegram-bot-token-here"

# API Configuration for Production (Railway)
# NOTE: Replace with your actual Railway API URL
API_URL="https://rvx-api.railway.app"
API_URL_NEWS="https://rvx-api.railway.app/explain_news"
API_BASE_URL="https://rvx-api.railway.app"

# Input/Output Configuration
MAX_INPUT_LENGTH=4096
MAX_TEXT_LENGTH=4096
API_TIMEOUT=30.0
FLOOD_COOLDOWN_SECONDS=3

# ===== GROQ API (основной - самый быстрый!) =====
GROQ_API_KEY="your-groq-api-key-here"
GROQ_MODEL="llama-3.3-70b-versatile"

# ===== MISTRAL API (fallback 1 - тоже бесплатный) =====
MISTRAL_API_KEY="your-mistral-api-key-here"
MISTRAL_MODEL="mistral-large"

# ===== DEEPSEEK API (fallback - may not be used) =====
DEEPSEEK_API_KEY="your-deepseek-api-key-here"
DEEPSEEK_MODEL="deepseek-chat"
DEEPSEEK_TEMPERATURE=0.3
DEEPSEEK_MAX_TOKENS=1500

# ===== GEMINI API (fallback) =====
GEMINI_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL="models/gemini-2.5-flash"
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=1500

# ===== SECURITY CONFIGURATION =====
PORT=8080
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=2.0
MAX_REQUESTS_PER_DAY=50
ENABLE_ANALYTICS=true
ENABLE_AUTO_CACHE_CLEANUP=true
CACHE_MAX_AGE_DAYS=7
DB_PATH=rvx_bot.db
ADMIN_USERS=790245132
UNLIMITED_ADMIN_USERS=7216426044

# API Key for bot authentication (generated - change in production)
BOT_API_KEY=your-bot-api-key-here

# Admin token for security endpoints (CHANGE THIS!)
ADMIN_TOKEN=your-admin-token-here-change-in-production

# ===== CACHE SETTINGS =====
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_CLEANUP_INTERVAL=300

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
RATE_LIMIT_PER_IP=true

# ===== ALLOWED ORIGINS (CORS) =====
ALLOWED_ORIGINS="*"

# ===== LOGGING =====
LOG_LEVEL=info
