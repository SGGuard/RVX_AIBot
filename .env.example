# ============================================
# RVX Bot - Environment Variables Template
# ============================================
# Скопируйте этот файл как .env и заполните своими значениями

# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===========================================
# GOOGLE GEMINI AI CONFIGURATION
# ===========================================
# Получите ключ на https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Модель Gemini для использования
# Доступные: gemini-2.5-flash, gemini-2.0-flash-exp, gemini-1.5-pro
GEMINI_MODEL=models/gemini-2.5-flash

# Креативность AI (0.0 - 1.0)
# Меньше = более предсказуемо, Больше = более креативно
GEMINI_TEMPERATURE=0.3

# Максимальное количество токенов в ответе
GEMINI_MAX_TOKENS=1500

# Таймаут запроса к Gemini (в секундах)
GEMINI_TIMEOUT=30

# ===========================================
# API SERVER CONFIGURATION
# ===========================================
# Порт для запуска API сервера
PORT=8000

# URL бэкенда для бота (для локального запуска)
BACKEND_URL=http://localhost:8000

# Максимальная длина текста новости (в символах)
MAX_TEXT_LENGTH=4096

# Включить кэширование ответов
CACHE_ENABLED=true

# Разрешенные origins для CORS (через запятую)
# Используйте * для разработки, конкретные домены для production
ALLOWED_ORIGINS=*

# ===========================================
# COINGECKO API CONFIGURATION
# ===========================================
# API ключ для CoinGecko (бесплатный tier поддерживает ~10-15 запросов/мин)
# Получите на https://www.coingecko.com/en/api/documentation
# Формат: CG-bAZzJqAYy3upeP1S947opp1C (пример)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Включить крипто дайджест (ежедневный в 9:00 UTC)
CRYPTO_DIGEST_ENABLED=true

# Включить мониторинг цен (для price alerts)
PRICE_MONITORING_ENABLED=true

# Включить анализ рынка (для market insights)
MARKET_ANALYSIS_ENABLED=true

# Включить портфолио трекинг (для /portfolio команды)
PORTFOLIO_TRACKING_ENABLED=true

# ===========================================
# LOGGING & MONITORING (опционально)
# ===========================================
# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# RATE LIMITING (опционально)
# ===========================================
# Максимум запросов в минуту
MAX_REQUESTS_PER_MINUTE=30

# ===========================================
# CACHE SETTINGS (опционально)
# ===========================================
# Максимальный размер кэша
CACHE_MAX_SIZE=100

# Время жизни записи в кэше (в секундах)
CACHE_TTL=3600
